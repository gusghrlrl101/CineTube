@{
    ViewData["Title"] = "Home Page";
    List<MovieInfo> recentMoviesInfo = ViewData["RecentMoviesInfo"] as List<MovieInfo>;
}

<div class="row">
    <div class="col-md-3">
        <h2>최신 영화</h2>
        @{
            const int MAX_LENGTH = 200;
            foreach (var movieInfo in recentMoviesInfo)
            {
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">@movieInfo.제목</h3>
                    </div>
                    <div class="panel-body">
                        @{if(@movieInfo.줄거리.Length < MAX_LENGTH) {
                              @movieInfo.줄거리
                          }
                          else
                          {
                              string shortstory = movieInfo.줄거리.Substring(0, MAX_LENGTH);
                              shortstory = shortstory.Insert(shortstory.Length, "...");
                              @shortstory
                          }
                        }
                    </div>
                    <table class="table">
                        <tr>
                            <th style="text-align:center">@movieInfo.금액₩</th>
                            <th style="text-align:center">@movieInfo.영화시간 분</th>
                            <th style="text-align:center">@movieInfo.관람제한</th>
                        </tr>
                    </table>
                    <div class="panel-footer">영화 세부정보</div>
                </div>
            }
        }
    </div>
    <div class="col-md-3">
        <h2>인기 영화</h2>
        <ul>
            <li>영화 2</li>
            <li>영화 3</li>
            <li>영화 4</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>자유게시판</h2>
        <ul>
            <li>이 영화 재밌던데</li>
            <li>이거 언제 나옴?</li>
            <li>제목이 기억안나는데 도와주세요</li>
            <li>이거 뭐하는 영화임?</li>
        </ul>
    </div>
</div>
